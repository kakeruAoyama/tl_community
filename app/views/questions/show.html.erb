<h1>Questions#show</h1>
<p>Find me in app/views/questions/show.html.erb</p>

<h3>質問の詳細</h3>
<div class="question">
  <p><%= @question.body %></p>
  <p><%= @question.created_at %></p>
</div>

<div class="answer-wrapper">
  <p>回答一覧</p>
  <% @answers.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.body %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@question,@answer], local: true) do |f| %>
      <%= f.text_area :body %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> 回答する
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "編集する", edit_question_path(@question.id) %>
<%= link_to "一覧に戻る", top_index_path %>